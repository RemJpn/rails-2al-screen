<%= render 'shared/sliding_menu' %>

<div class="show-poster"  style="background-image: url('<%= cl_image_path @show.wide_poster.key %>')">
  <div class="show-info">
    <h2 class="show-title">
      <%= @show.artist.name.upcase %> <br>
      <%= @show.name %>
    </h2>
    <div class="show-description">
      <%= @show.description %>
    </div>

    <button class="button-watch"><div class="arrow-right"></div>REGARDER</button>
  </div>
</div>

<div class="featured-shows">
  <div class="category-name">
    À L’AFFICHE
  </div>
  <div class="category-shows">
    <% @featured_shows.each do |show|  %>
      <%= render partial:'shared/show_thumbnail', locals: {show: show}  %>
    <% end %>
  </div>
</div>

<%= @featured_shows.each do |show| %>
  <div class="show-description">
    <%= cl_image_tag show.thumbnail.key %>
    <%= show.name %>
    <%= show.description %>
    <%= show.date %>
    <%= show.time %>
    <%= show.price %>
  </div>
<% end %>


<%= render 'shared/footer' %>
