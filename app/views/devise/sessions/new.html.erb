<%= render partial: 'shared/navbar', locals: { white_logo: false }  %>


<div class="booking-container container">
  <div style="background-image: url('<%= cl_image_path Show.all.shuffle.first.wide_poster.key %>')">
  </div>
  <div>
    <div>
      <div class="text-booking mb-4">
        CONNEXION
      </div>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs user-form">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      label: false,
                      placeholder: "Email" %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" },
                      label: false,
                      placeholder: "Mot de passe" %>
          <%= f.input :remember_me, input_html: { class: "toggle" }, as: :boolean  if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "SE CONNECTER", class: "btn-red" %>
        </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>








