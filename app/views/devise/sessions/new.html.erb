<%= render partial: 'shared/navbar', locals: { white_logo: false }  %>

<div class="connection-card">
  <%= image_tag "sign_in_logo.png" %>
  <div class="connection-right">
    <div class="text-center">
      <h3>
        Bienvenue dans <span>LIVUBI</span>
      </h3>
      <%= image_tag "sign_in_character.png" %>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs user-form">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    label: "Identifiant" %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    label: "Mot de passe" %>
      </div>

      <div class="d-flex justify-content-between align-items-center mb-3 mt-3">
        <%= f.button :submit, "LOGIN", class: "button-pill button-pill-red button-pill-big" %>
        <%= link_to "mot de passe oubliÃ©?", new_password_path(resource_name), class: "link-yellow" %>

      </div>
    <% end %>

    <div class="text-center">
      <p class="mb-2">
        Vous n'avez pas encore de compte LIVUBI?
      </p>
      <%= link_to "OUVRIR UN COMPTE", new_registration_path(resource_name), class: "button-pill button-pill-yellow button-pill-small" %>
    </div>
  </div>
</div>

