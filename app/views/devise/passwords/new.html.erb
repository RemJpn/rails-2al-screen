<%= render partial: 'shared/navbar', locals: { white_logo: false }  %>


<div class="booking-container container">
  <div style="background-image: url('<%= cl_image_path Show.all.shuffle.first.wide_poster.key %>')">
  </div>
  <div>
    <div>
      <div class="text-booking mb-4">
        MOT DE PASSE OUBLIÃ‰?
      </div>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs user-form">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      label: false,
                      placeholder: "Email" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "CONTINUER", class: "btn-red" %>
        </div>
      <% end %>

      <br>
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
